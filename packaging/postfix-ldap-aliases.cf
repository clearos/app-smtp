# CLEAROS_DIRECTORY_TARGET=/etc/postfix/ldap-aliases.cf
# CLEAROS_DIRECTORY_OWNER=root
# CLEAROS_DIRECTORY_GROUP=root
# CLEAROS_DIRECTORY_PERMISSIONS=0600
# CLEAROS_DIRECTORY_WARNING_MESSAGE
server_host = ldap://127.0.0.1:389
search_base = ou=Users,ou=Accounts,@@@base_dn@@@
query_filter = (&(!(kolabDeleteFlag=*))(|(clearMailAliases=%s)(mail=%s))(!(cn:dn:=external)))
result_attribute = mail
result_filter = %s
search_timeout = 15
scope = sub
bind = no
version = 3
